{
  "manifest_version": 3,
  "name": "Reading Companion",
  "version": "1.0",
  "description": "A tool to help you read and annotate text.",
  "permissions": ["activeTab"],
  "action": {
    "default_icon": {
      "16": "icon16.png"
    }
  },
  "icons": {
    "16": "icon16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["index.html", "styles.css"],
    "matches": ["<all_urls>"]
  }]
}